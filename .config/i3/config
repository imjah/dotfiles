# Theme
# ------------------------------------------------------------------------------
set $bg        "#282828"
set $fg        "#ebdbb2"
set $red       "#cc241d"
set $green     "#98971a"
set $yellow    "#d79921"
set $blue      "#458588"
set $purple    "#b16286"
set $aqua      "#689d6a"
set $gray      "#a89984"

# Aliases
# ------------------------------------------------------------------------------
set $mod         Mod4
set $exec        exec        --no-startup-id
set $exec_always exec_always --no-startup-id

# Font
# ------------------------------------------------------------------------------
font pango:hack 9

# Wallpaper
# ------------------------------------------------------------------------------
$exec_always feh --no-fehbg --bg-fill "$(xdg-user-dir PICTURES)/wallpapers/the-invincible-1.jpg"

# Startup
# ------------------------------------------------------------------------------
$exec xset -dpms
$exec xset s off
$exec xset r rate 250 50
$exec redshift -l 53:15 -t 6500:3500
$exec_always easyeffects --gapplication-service
$exec firefox

# Keybinds
# ------------------------------------------------------------------------------
floating_modifier $mod
