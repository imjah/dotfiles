# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß

general {
	colors         = true
	interval       = 1
	color_good     = "#689d6a"
	color_degraded = "#d79921"
	color_bad      = "#cc241d"
}

order += "ethernet _first_"
order += "wireless _first_"
order += "volume master"
order += "tztime local"

ethernet _first_ {
        format_up = "Wired"
        format_down = ""
}

wireless _first_ {
        format_up = "%essid"
        format_down = ""
}

volume master {
        format = "%volume"
        format_muted = "Muted"
        device = "default"
        mixer = "Master"
        mixer_idx = 0
}

tztime local {
	format = "%a %d %h  %H:%M"
}

