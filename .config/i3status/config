general {
	colors         = true
	color_good     = "#ebdbb2"
	color_degraded = "#d79921"
	color_bad      = "#cc241d"
	interval       = 1
}

order += "cpu_usage"
order += "memory"
order += "disk /"
order += "wireless _first_"
order += "battery all"
order += "volume master"
order += "read_file COUNTDOWN"
order += "time"

cpu_usage {
	format = "󰻠 %usage"
}

memory {
	format = "󰍛 %percentage_used"
}

disk / {
	format = "󰋊 %percentage_used"
}

wireless _first_ {
	format_up = "󰖩%quality"
	format_down = ""
}

battery all {
	format = "%status %percentage"
	format_down = ""
	format_percentage = "%.00f%s"
	status_chr = "󰂄"
	status_bat = "󰁹"
	status_full = "󰚥"
	low_threshold = 20
	last_full_capacity = true
}

volume master {
	format = "󰕾 %volume"
	format_muted = "󰝟 Muted"
	mixer = "Master"
	mixer_idx = 0
}

read_file COUNTDOWN {
	format = "󱎫 %content"
	format_bad = ""
	path = "/tmp/i3-countdown"
}

time {
	format = "%a %d %b %H:%M "
}
