general {
	colors         = true
	color_good     = "#ebdbb2"
	color_degraded = "#d79921"
	color_bad      = "#cc241d"
	interval       = 1
}

order += "disk /"
order += "disk /mnt/backup"
order += "disk /mnt/usb-1"
order += "disk /mnt/usb-2"
order += "disk /mnt/usb-3"
order += "memory"
order += "cpu_usage"
order += "volume master"
order += "read_file countdown"
order += "time"

read_file countdown {
	format = "CNT %content"
	format_bad = ""
	path = "/tmp/i3-countdown"
}

disk / {
	format = "DSK %percentage_used"
}

disk /mnt/backup {
	format = "BAK %percentage_used"
}

disk /mnt/usb-1 {
	format = "USB %percentage_used"
}

disk /mnt/usb-2 {
	format = "USB %percentage_used"
}

disk /mnt/usb-3 {
	format = "USB %percentage_used"
}

memory {
	format = "RAM %percentage_used"
}

cpu_usage {
	format = "CPU %usage"
}

volume master {
	format = "VOL %volume"
	format_muted = "VOL %volume"
	mixer = "Master"
	mixer_idx = 0
}

time {
	format = "%a %d %b %H:%M "
}
